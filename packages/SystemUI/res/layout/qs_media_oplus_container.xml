<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/qs_media_oplus_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qs_media_oplus_container_height"
    android:layout_marginTop="@dimen/qs_media_oplus_container_margin_top"
    android:layout_marginBottom="@dimen/qs_media_oplus_container_margin_bottom"
    android:paddingBottom="6dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:baselineAligned="false">

    <include layout="@layout/qs_media_oplus_header_container" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.android.systemui.animation.view.LaunchableLinearLayout
                android:id="@+id/qs_media_oplus_internet_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="start|center"
                android:layout_marginBottom="4dp"
                android:background="@drawable/qs_media_oplus_bg_button"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:backgroundTint="?attr/offStateColor">

                <ImageView
                    android:id="@+id/qs_media_oplus_internet_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="start|center"
                    android:src="@drawable/ic_statusbar_wifi" />

                <TextView
                    android:id="@+id/qs_media_oplus_internet_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="0dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/quick_settings_internet_label"
                    android:textAppearance="@style/TextAppearance.QS.TileLabel"
                    android:textColor="?android:textColorPrimary"
                    android:textDirection="locale" />

                <ImageView
                    android:id="@+id/qs_media_oplus_internet_chevron"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center"
                    android:src="@*android:drawable/ic_chevron_end" />

            </com.android.systemui.animation.view.LaunchableLinearLayout>

            <com.android.systemui.animation.view.LaunchableLinearLayout
                android:id="@+id/qs_media_oplus_bluetooth_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="start|center"
                android:layout_marginTop="4dp"
                android:background="@drawable/qs_media_oplus_bg_button"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:backgroundTint="?attr/offStateColor">

                <ImageView
                    android:id="@+id/qs_media_oplus_bluetooth_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="start|center"
                    android:src="@drawable/qs_bluetooth_icon_on" />

                <TextView
                    android:id="@+id/qs_media_oplus_bluetooth_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="0dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="@string/quick_settings_bluetooth_label"
                    android:textAppearance="@style/TextAppearance.QS.TileLabel"
                    android:textColor="?android:textColorPrimary"
                    android:textDirection="locale" />

                <ImageView
                    android:id="@+id/qs_media_oplus_bluetooth_chevron"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center"
                    android:src="@*android:drawable/ic_chevron_end" />

            </com.android.systemui.animation.view.LaunchableLinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:cardCornerRadius="@dimen/qs_media_oplus_corner_radius"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/qs_media_oplus_player_card"
                android:src="@drawable/qs_media_oplus_player_button_background"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include layout="@layout/qs_media_oplus_player_container" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
