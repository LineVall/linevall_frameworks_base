<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/qs_media_oplus_player_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.systemui.animation.view.LaunchableLinearLayout
        android:id="@+id/qs_media_oplus_player_container"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:clipToOutline="true"
        android:elevation="2dp"
        android:background="@drawable/rounded_clip"
        android:layout_marginStart="@dimen/qs_media_oplus_padding"
        android:layout_marginTop="@dimen/qs_media_oplus_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/qs_media_oplus_album"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />
    </com.android.systemui.animation.view.LaunchableLinearLayout>

    <ImageView
        android:id="@+id/qs_media_oplus_icon_app"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="@dimen/qs_media_oplus_padding"
        android:background="@drawable/qs_media_oplus_player_button_background"
        android:backgroundTint="?android:colorAccent"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_media_oplus_player_icon_app"
        app:layout_constraintStart_toStartOf="@+id/qs_media_oplus_output_switcher"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?android:colorPrimary" />

    <com.android.systemui.animation.view.LaunchableImageView
        android:id="@+id/qs_media_oplus_output_switcher"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/qs_media_oplus_padding"
        android:layout_marginEnd="@dimen/qs_media_oplus_padding"
        android:background="@null"
        android:scaleType="centerInside"
        android:tint="?android:textColorPrimary"
        android:src="@drawable/ic_media_oplus_player_output_switcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        android:gravity="start|center"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toTopOf="@id/qs_media_oplus_player_play_pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qs_media_oplus_player_container">

        <TextView
            android:id="@+id/qs_media_oplus_player_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:lineSpacingExtra="0sp"
            android:singleLine="true"
            android:text="@string/qs_media_oplus_default_title"
            android:textAppearance="@style/TextAppearance.QS.TileLabel"
            android:textColor="@color/qs_media_oplus_title_color"
            android:textDirection="locale"
            android:layout_marginStart="-1dp"
            android:textSize="@dimen/qs_media_oplus_player_title_size" />

        <TextView
            android:id="@+id/qs_media_oplus_player_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:fontWeight="400"
            android:lineSpacingExtra="0sp"
            android:text="Music"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.QS.TileLabel"
            android:textColor="@color/qs_media_oplus_title_color"
            android:textDirection="locale"
            android:textSize="@dimen/qs_media_oplus_player_subtitle_size"
            android:textStyle="normal" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/qs_media_oplus_player_play_pause"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:padding="4dp"
        android:layout_marginStart="@dimen/qs_media_oplus_padding"
        android:layout_marginBottom="@dimen/qs_media_oplus_padding"
        android:background="@drawable/qs_media_oplus_player_button_background"
        android:backgroundTint="@color/qs_media_oplus_bg_color"
        android:layoutDirection="ltr"
        android:scaleType="centerInside"
        android:tint="@color/qs_media_oplus_title_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/qs_media_oplus_player_action_prev"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="4dp"
        android:layout_marginBottom="@dimen/qs_media_oplus_padding"
        android:layout_marginEnd="15dp"
        android:background="@drawable/qs_media_oplus_player_button_background"
        android:backgroundTint="@color/qs_media_oplus_bg_color"
        android:layoutDirection="ltr"
        android:scaleType="centerInside"
        android:tint="@color/qs_media_oplus_title_color"
        android:src="@drawable/ic_media_oplus_player_act_prev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/qs_media_oplus_player_action_next"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageButton
        android:id="@+id/qs_media_oplus_player_action_next"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="4dp"
        android:layout_marginEnd="@dimen/qs_media_oplus_padding"
        android:layout_marginBottom="@dimen/qs_media_oplus_padding"
        android:background="@drawable/qs_media_oplus_player_button_background"
        android:backgroundTint="@color/qs_media_oplus_bg_color"
        android:layoutDirection="ltr"
        android:scaleType="centerInside"
        android:tint="@color/qs_media_oplus_title_color"
        android:src="@drawable/ic_media_oplus_player_act_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
