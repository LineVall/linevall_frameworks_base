<resources>
    <!-- Tri-state UI -->
    <style name="qs_theme" parent="Theme.SystemUI.QuickSettings">
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- Island notification -->
    <style name="Theme.Island.SystemUI" parent="@style/Theme.MaterialComponents.DayNight">
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

    <style name="islandBackgroundOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">48dp</item>
    </style>

    <!-- Data usage -->
    <style name="TextAppearance.QS.Status.DataUsage">
        <item name="android:textColor">?attr/onSurfaceVariant</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

    <style name="TextAppearance.QS.Status">
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <style name="TextAppearance.QS.Status.NoCarrierText">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>
</resources>
